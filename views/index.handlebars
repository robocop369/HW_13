<div class="row">
    <div class="col-1">
    </div>


    <div class="col-5">
        <ul>
            {{#each burgers}}
                {{#unless devoured}}

                    <li>
                        <span class="border border-primary bg-light uneaten-li">{{id}}. {{burger_name}}</span>
                        <button type="button" class="btn btn-primary uneaten-li-btn" data-id="{{id}}">Devour</button>
                    </li>
                {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="col-1">
    </div>


    <div class="col-5">
        <ul>
            {{#each burgers }}
                {{#if devoured}}
                <li class="devoured-li">
                    <span class="border border-primary bg-light devoured-li-elt">{{burger_name}}</span>
                </li>
                {{/if}}
            {{/each}}
        </ul>
    </div>

</div>